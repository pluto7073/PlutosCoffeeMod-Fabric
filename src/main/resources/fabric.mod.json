{
  "schemaVersion": 1,
  "id": "plutoscoffee",
  "version": "${version}",

  "name": "Pluto's Coffee Mod",
  "description": "Make your very own starbucks!",
  "authors": [
    "Pluto7073"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/plutos-coffee-mod",
    "issues": "https://github.com/pluto7073/PlutosCoffeeMod-Fabric/issues",
    "sources": "https://github.com/pluto7073/PlutosCoffeeMod-Fabric"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.wiki": "https://github.com/pluto7073/PlutosCoffeeMod-Fabric/wiki"
      },
      "update_checker": true,
      "parent": {
        "id": "plutosdrinks",
        "name": "Pluto's Drinks Series",
        "description": "Every mod in the Pluto's Drinks collection",
        "icon": "assets/pdapi/icon.png"
      }
    }
  },

  "license": "MIT",
  "icon": "assets/plutoscoffee/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "ml.pluto7073.plutoscoffee.PlutosCoffee"
    ],
    "client": [
      "ml.pluto7073.plutoscoffee.Client"
    ],
    "modmenu": [
      "ml.pluto7073.plutoscoffee.compat.modmenu.CoffeeModMenuApiImpl"
    ],
    "rei_client": [
      "ml.pluto7073.plutoscoffee.compat.rei.CoffeeREI"
    ]
  },
  "mixins": [
    "plutoscoffee.mixins.json"
  ],
  "accessWidener": "plutoscoffee.accesswidener",

  "depends": {
    "fabricloader": ">=0.16.5",
    "fabric-api": "*",
    "minecraft": "~1.20.3",
    "java": ">=17",
    "pdapi": ">=1.0.1"
  },
  "suggests": {
    "flamingo": "*",
    "modmenu": "*",
    "rei": "*"
  }
}
